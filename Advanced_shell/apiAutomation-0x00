#!/bin/bash

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Make the API request and save output to data.json
# If curl fails, redirect stderr to errors.txt
if curl -s -f "$API_URL" -o data.json; then
    # -s → silent mode (no progress bar).
    # -f → fail silently on HTTP errors (non-200 responses).
    # -o data.json → saves the output to data.json.
    echo "Data successfully saved to data.json"
else
    echo "Failed to fetch data from $API_URL" >> errors.txt
fi
