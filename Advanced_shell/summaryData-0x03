#!/bin/bash

# Directory containing PokÃ©mon JSON files
DATA_DIR="pokemon_data"

# Output CSV file
CSV_FILE="pokemon_report.csv"

# Initialize CSV file with headers
echo "Name,Height (m),Weight (kg)" > "$CSV_FILE"

# Loop through each JSON file and extract data
for file in "$DATA_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/^\(.\)/\U\1/')
    height=$(jq -r '.height' "$file" | awk '{printf "%.1f", $1/10}')
    weight=$(jq -r '.weight' "$file" | awk '{printf "%.1f", $1/10}')

    echo "$name,$height,$weight" >> "$CSV_FILE"
done

echo "CSV Report generated at: $CSV_FILE"
echo

# Calculate average height and weight using awk
awk -F, 'NR>1 {sumH+=$2; sumW+=$3; count++} END {printf "Average Height: %.2f m\nAverage Weight: %.2f kg\n", sumH/count, sumW/count}' "$CSV_FILE"
