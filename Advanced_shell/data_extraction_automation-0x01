#!/bin/bash

# Extract name
name=$(jq -r '.name' data.json | sed 's/^\(.\)/\U\1/')

# Extract height (convert decimeters to meters)
formatted_height=$(jq -r '.height' data.json | awk '{printf "%.1f", $1/10}')

# Extract weight (convert hectograms to kilograms)
formatted_weight=$(jq -r '.weight' data.json | awk '{printf "%.0f", $1/10}')

# Extract type(s) (capitalize first letter)
type=$(jq -r '.types[].type.name' data.json | sed 's/^\(.\)/\U\1/' | paste -sd "/")

# Print in the exact format the check expects
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
