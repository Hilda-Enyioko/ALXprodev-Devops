#!/bin/bash

# Directory to store Pokémon data
mkdir -p pokemon_data

# List of Pokémon
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Maximum retries
MAX_RETRIES=3

# Array to store background PIDs
pids=()

# Function to fetch a single Pokémon
fetch_pokemon() {
    local pokemon=$1
    local attempt=1
    local success=0

    echo "Fetching data for $pokemon..."

    while [ $attempt -le $MAX_RETRIES ]; do
        if curl -s -f "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "pokemon_data/$pokemon.json"; then
            echo "Saved data to pokemon_data/$pokemon.json ✅"
            success=1
            break
        else
            echo "Attempt $attempt failed for $pokemon..."
            ((attempt++))
            sleep 1
        fi
    done

    if [ $success -eq 0 ]; then
        echo "Failed to fetch data for $pokemon after $MAX_RETRIES attempts." >> errors.txt
    fi
}

# Start fetching in background and store PID
for pokemon in "${pokemon_list[@]}"; do
    fetch_pokemon "$pokemon" &
    pids+=($!)
done

# List all background jobs
echo "Currently running background jobs:"
jobs

# Optional: if any job hangs for too long, kill it (example)
sleep 5  # simulate a timeout check
for pid in "${pids[@]}"; do
    if kill -0 $pid 2>/dev/null; then
        echo "Killing hung process $pid..."
        kill $pid
    fi
done

# Wait for remaining background jobs
wait

echo "All Pokémon data fetched."
